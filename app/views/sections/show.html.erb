<div class="container">
  <div class="row">
    <div class="my-content section-content">
      <div class="jumbotron">
        <h1><%= @section.name %></h1>
        <p><%= @section.description %></p>
      </div>
      <div class="card">
        <div class="main main-raised">
          <div class="card-header card-header-icon" data-background-color="blue">
            <i class="material-icons">view_list</i>
          </div>
          <h4 class="card-title">本章任务</h4>
          <div class="card-content">
            <div class="table-responsive">
              <table class="table table-shopping">
                <tbody>
                  <% @missions.each do |mission| %>
                    <tr>
                      <td class="td-name"><%= mission.name %></td>
                      <td class="text-center" width="80%">
                        <div class="progress">
                          <div class="progress-bar progress-bar-info progress-bar-striped active" aria-valuenow="0" aria-valuemax="100">
                            <span class="sr-only">35% Complete (success)</span>
                          </div>
                        </div>
                      </td>
                      <td>
                        <%= render_mission_start_btn(mission) %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
