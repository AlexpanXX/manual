<%= simple_form_for [:admin, @mission] do |f| %>
  <div class="form-inputs">
    <%= f.input :name, label: "任务名称", autofocus: true %>
    <%= f.input :description, label: "任务描述" %>
    <%= f.input :section_id, label: "所属章节", required: true, as: :select, collection: @sections %>
  </div>
  <div class="form-actions">
    <%= link_to("取消", :back, class: "btn btn-raised btn-white") %>
    <%= f.submit "保存", data: {disable_with: "正在保存..."}, class: "btn btn-raised btn-success" %>
  </div>
<% end %>
