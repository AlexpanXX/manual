<div class="my-content-raised main">
  <div class="container-fluid">
    <div class="page-header">
      <h3>任务列表
        <%= link_to fa_icon("plus", text: "新增"), new_admin_mission_path, class: "btn btn-raised btn-success pull-right" %>
      </h3>
    </div>
    <div class="panel panel-default">
      <table class="table table-shopping">
        <thead>
          <tr>
            <th>#</th>
            <th>名称</th>
            <th>所属章节</th>
            <th class="text-center">检查点</th>
            <th class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @missions.each_with_index do |mission, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= link_to mission.name, admin_mission_path(mission) %></td>
            <td><%= mission.section.name %></td>
            <td class="text-center">
              <%= link_to mission.checkpoints_count, admin_mission_path(mission), class: "btn btn-raised btn-round btn-info btn-sm" %>
            </td>
            <td class="text-center">

              <%= link_to fa_icon("edit"), edit_admin_mission_path(mission), rel: "tooltip", title: "编辑", class: "btn btn-raised btn-white btn-sm" %>
              <%= render "common/delete_btn", path: admin_mission_path(mission), message: "确认删除“#{mission.name}”这个任务吗？任务下的所有检查点将被一同删除！" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render "common/delete_confirm" %>
